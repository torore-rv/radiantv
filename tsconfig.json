{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",  // 프로젝트 루트 디렉토리에서 시작
    "paths": {
      "@/styles/*": ["src/styles/*"],           // styles alias 설정
      "@/components/*": ["src/components/*"],   // components alias 설정
      "@pages/*": ["src/pages/*"],              // pages alias 설정
      "@lib/*": ["lib/*"],                      // lib alias 설정
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
